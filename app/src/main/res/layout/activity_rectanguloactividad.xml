<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".RectanguloActivity">

        <TextView
            android:id="@+id/lblBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/txtBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:id="@+id/lblAltura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura:"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/txtBase" />

        <EditText
            android:id="@+id/txtAltura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@id/lblAltura" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:layout_marginTop="16dp"
            android:layout_below="@id/txtAltura" />

        <TextView
            android:id="@+id/lblCalculoArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Área:"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/btnCalcular" />

        <TextView
            android:id="@+id/lblCalArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/lblCalculoArea" />

        <TextView
            android:id="@+id/lblCalculoPerimetro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perímetro:"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/lblCalArea" />

        <TextView
            android:id="@+id/lblCalPerimetro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/lblCalculoPerimetro" />

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limpiar"
            android:layout_marginTop="16dp"
            android:layout_below="@id/lblCalPerimetro" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:layout_marginTop="16dp"
            android:layout_below="@id/btnLimpiar" />

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>